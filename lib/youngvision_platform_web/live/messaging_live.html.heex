<div class="container mx-auto px-4 py-8">
  <div class="flex h-[calc(100vh-200px)] bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Conversations sidebar -->
    <div class="w-1/4 border-r border-gray-200 bg-gray-50">
      <div class="p-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold">Messages</h2>
        <div class="mt-2 flex justify-between">
          <span class="text-sm text-gray-600">
            <%= if @unread_count > 0 do %>
              <span class="font-medium"><%= @unread_count %> unread</span>
            <% else %>
              No unread messages
            <% end %>
          </span>
          <.link patch={~p"/messages/new"} class="text-sm text-blue-500 hover:underline">
            New Message
          </.link>
        </div>
      </div>
      
      <div class="overflow-y-auto h-[calc(100%-70px)]">
        <%= if Enum.empty?(@conversations) do %>
          <div class="p-4 text-center text-gray-500">
            No conversations yet
          </div>
        <% else %>
          <%= for message <- @conversations do %>
            <% 
              other_user = if message.sender.id == @current_user.id, do: message.recipient, else: message.sender
              is_unread = message.recipient_id == @current_user.id && is_nil(message.read_at)
            %>
            <.link 
              patch={~p"/messages/#{other_user.id}"}
              class={[
                "block p-4 border-b border-gray-200 hover:bg-gray-100 transition-colors",
                if(@selected_conversation && @selected_conversation.id == other_user.id, do: "bg-blue-50")
              ]}
            >
              <div class="flex justify-between items-start">
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded-full overflow-hidden mr-3 flex-shrink-0">
                    <img src={YoungvisionPlatform.Accounts.ProfilePictureHelper.profile_picture_url(other_user)} 
                         alt="#{other_user.display_name}'s profile picture" 
                         class="w-full h-full object-cover" />
                  </div>
                  <div class={["font-medium", if(is_unread, do: "font-bold")]}>
                    <%= other_user.display_name %>
                  </div>
                </div>
                <div class="text-xs text-gray-500">
                  <%= format_time(message.inserted_at) %>
                </div>
              </div>
              <div class={["mt-1 text-sm text-gray-600 truncate", if(is_unread, do: "font-semibold")]}>
                <%= if message.sender_id == @current_user.id do %>
                  <span class="text-gray-400">You: </span>
                <% end %>
                <%= message.content %>
              </div>
            </.link>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- Message content area -->
    <div class="w-3/4 flex flex-col">
      <%= if @selected_conversation do %>
        <!-- Conversation header -->
        <div class="p-4 border-b border-gray-200 flex items-center">
          <div class="w-10 h-10 rounded-full overflow-hidden mr-3">
            <img src={YoungvisionPlatform.Accounts.ProfilePictureHelper.profile_picture_url(@selected_conversation)} 
                 alt="#{@selected_conversation.display_name}'s profile picture" 
                 class="w-full h-full object-cover" />
          </div>
          <.link navigate={~p"/users/#{@selected_conversation.id}"} class="font-medium text-lg text-orange-500 hover:underline">
            <%= @selected_conversation.display_name %>
          </.link>
        </div>
        
        <!-- Messages -->
        <div class="flex-1 p-4 overflow-y-auto" id="messages-container" phx-hook="ScrollToBottom">
          <%= for message <- @messages do %>
            <div id={"message-#{message.id}"} class={[
              "mb-4 max-w-[70%]",
              if(message.sender_id == @current_user.id, do: "ml-auto", else: "flex")
            ]}>
            <%= if message.sender_id != @current_user.id do %>
              <div class="w-8 h-8 rounded-full overflow-hidden mr-2 flex-shrink-0 self-end">
                <img src={YoungvisionPlatform.Accounts.ProfilePictureHelper.profile_picture_url(message.sender)} 
                     alt="#{message.sender.display_name}'s profile picture" 
                     class="w-full h-full object-cover" />
              </div>
            <% end %>
            <div class={[
              "p-3 rounded-lg",
              if(message.sender_id == @current_user.id, do: "bg-blue-500 text-white", else: "bg-gray-200")
            ]}>
              <div class="text-sm"><%= message.content %></div>
              <div class={["text-xs mt-1", if(message.sender_id == @current_user.id, do: "text-blue-200", else: "text-gray-500")]}>
                <%= format_time(message.inserted_at) %>
                <%= if message.sender_id == @current_user.id do %>
                  <%= if message.read_at do %>
                    Â· Read
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        
        <!-- Message input -->
        <div class="p-4 border-t border-gray-200">
          <form phx-submit="send-message" class="flex">
            <input 
              type="text" 
              name="content" 
              value={@message_form[:content].value}
              placeholder="Type a message..." 
              class="flex-1 rounded-l-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
              autocomplete="off"
            />
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-r-lg hover:bg-blue-600">
              Send
            </button>
          </form>
        </div>
      <% else %>
        <div class="flex-1 flex items-center justify-center text-gray-500">
          <div class="text-center">
            <div class="text-5xl mb-4">ğŸ’¬</div>
            <div class="text-xl">Select a conversation or start a new one</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= if @live_action == :new do %>
  <.modal id="new-message-modal" show on_cancel={JS.patch(~p"/messages")}>
    <.header>
      <h2 class="text-lg font-semibold">New Message</h2>
    </.header>
    
    <div class="py-4" phx-hook="LoadUserList" id="user-list-container">
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Select a user to message</label>
        <input 
          type="text" 
          id="user-search" 
          placeholder="Search users..." 
          class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>
      
      <div class="max-h-60 overflow-y-auto" id="user-list">
        <%= if assigns[:users] do %>
          <%= for user <- @users do %>
            <.link 
              patch={~p"/messages/#{user.id}"}
              class="block p-3 border-b border-gray-200 hover:bg-gray-100 transition-colors"
            >
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full overflow-hidden mr-3 flex-shrink-0">
                  <img src={YoungvisionPlatform.Accounts.ProfilePictureHelper.profile_picture_url(user)} 
                       alt="#{user.display_name}'s profile picture" 
                       class="w-full h-full object-cover" />
                </div>
                <div>
                  <div class="font-medium"><%= user.display_name %></div>
                  <div class="text-sm text-gray-600"><%= user.email %></div>
                </div>
              </div>
            </.link>
          <% end %>
        <% else %>
          <div class="text-center p-4 text-gray-500">
            Loading users...
          </div>
        <% end %>
      </div>
    </div>
  </.modal>
<% end %>
